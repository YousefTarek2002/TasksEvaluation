@using TasksEvaluation.Core.DTOs 
@model IEnumerable<StudentDto> 
@{
	ViewData["Title"] = "All Students";
}
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4 class="">Students List</h4>
<a asp-controller="Student" asp-action="Create" class="btn btn-added float-end btn-info mb-3"><img src="/uploads/icons8-plus-24.png" alt="img">Add New Student</a>
<p>Manage Your Students</p>
<div class="text-center">

	<table class="table table-bordered table-striped">
		<tr>
			<th>Student Name</th>
			<th>Student Phone</th>
			<th>Student Email</th>
    		<th>Group</th>
			<th>Student Photo</th>

			<th></th>
		</tr>
		@foreach (var student in Model)
		{
			<tr>
				<td class="">@student.FullName</td>
				<td>@student.MobileNumber</td>
				<td>@student.Email</td>
				<td>@student.Group.Title</td>

				<td><img height="50px" width="50px" src="@student.ProfilePic" alt="Alternate Text" /></td>
				<td>
					<a class="btn btn-primary" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
				</td>
			</tr>

		}
	</table>
</div>

