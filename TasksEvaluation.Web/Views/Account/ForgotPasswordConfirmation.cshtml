@{
    ViewData["Title"] = "Forgot Password Confirmation";
}



<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4 card p-3">
        <h3 class="text-center text-primary mb-3">Forgot Passowrd Confirmation</h3>
        <p class="text-center">
            Please check your email for instructions on how to reset your password.
        </p>
        <p class="text-center">
            If you haven't received the email within a few minutes, please check your spam or junk folder.
        </p>

        <div class="row mt-2 d-flex align-items-center justify-content-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary col-5">Back to Login</a>

        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}









