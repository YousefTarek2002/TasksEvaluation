@using TasksEvaluation.Web.ViewModels.AccountViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Passowrd";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4 card p-3">
        <h3 class="text-center text-primary mb-3">Reset Password</h3>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.Code)

            <div class="mb-1">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row mt-2 d-flex align-items-center justify-content-center">

                <input type="submit" value="Reset Password" class="btn btn-primary col-5" />
            </div>
        }

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
