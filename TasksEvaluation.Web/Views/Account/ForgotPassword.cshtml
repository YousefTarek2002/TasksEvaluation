@using TasksEvaluation.Web.ViewModels.AccountViewModels
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Passowrd";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4 card p-3">
        <h2 class="text-center text-primary">Forgot Passowrd</h2>
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-1">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mt-2 d-flex align-items-center justify-content-center">

                <input type="submit" value="Send Message" class="btn btn-primary col-5" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}