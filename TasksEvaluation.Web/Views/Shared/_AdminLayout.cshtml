<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BooksLibrary.styles.css" asp-append-version="true" />
    <title>Admin Dashboard</title>
</head>
<body>

    <!-- الشريط الجانبي -->
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark sidenav">
        <span class="fs-4 text-center text-white">Dashboard</span>

        <hr class="text-white">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Student" asp-action="GetAllStudents" class="nav-link link-dark">
                    <i class="fas fa-users"></i> Students
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Assignment" asp-action="GetAllAssignments" class="nav-link link-dark">
                    <i class="fas fa-tasks"></i> Assignments
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Reports" asp-action="Index" class="nav-link link-dark">
                    <i class="fas fa-chart-line"></i> Reports
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Massege" asp-action="Inbox" class="nav-link link-dark">
                    <i class="fas fa-envelope"></i> Messages
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Navigation" asp-action="List" class="nav-link link-dark">
                    <i class="fas fa-bell"></i> Notifications
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Settings" asp-action="Index" class="nav-link link-dark">
                    <i class="fas fa-cogs"></i> Settings
                </a>
            </li>
        </ul>

        <hr class="text-white">
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                <strong>@User?.Identity?.Name</strong>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                <li><a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change Password</a></li>
                <li><a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Log out</a></li>
            </ul>
        </div>
    </div>

    <!-- المحتوى الرئيسي -->
    <div class="container main">

        <!-- شريط البحث -->
        <div class="row mt-3 mb-4">
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search..." aria-label="Search">
                    <button class="btn btn-primary" type="button">Search</button>
                </div>
            </div>
        </div>

        <!-- الأزرار العلوية -->
        <div class="row mb-4">
            <div class="col-md-12 text-end">
                <button class="btn btn-success me-2">Add New</button>
                <button class="btn btn-danger">Delete Selected</button>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <i class="fas fa-users"></i>
                    <h4>Total Students</h4>
                    <p id="total-students">150</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <i class="fas fa-tasks"></i>
                    <h4>Pending Assignments</h4>
                    <p id="pending-assignments">45</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <h4>Total Teachers</h4>
                    <p id="total-teachers">25</p>
                </div>
            </div>
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
